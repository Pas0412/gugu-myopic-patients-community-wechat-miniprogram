
._div,
scroll-view,
swiper {
	box-sizing: border-box;
}
.wuc-tab {
    white-space: nowrap;
}
.wuc-tab-item {
    height: 40px;
    display: inline-block;
    line-height: 40px;
}
.wuc-tab-item.cur {
    border-bottom: 3px solid;
	border-color: #2FCE56;
}
.wuc-tab-item-text {
	font-size: 16px;
	color: #2E2E2E;
}
.wuc-tab-item-text.cur {
	font-weight: bold;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.text-center {
    text-align: center;
}
.flex-sub {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
